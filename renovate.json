{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prHourlyLimit": 0,
  "platformCommit": true,
  "kubernetes": {
    "fileMatch": [
      "k8s/.+\\.yaml$",
      "rpi5/.+\\.yaml$"
    ]
  },
  "argocd": {
    "fileMatch": [
      "k8s/.+\\.yaml$",
      "rpi5/.+\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "lscr.io/linuxserver/jellyfin"
      ],
      "allowedVersions": "!/^\\d{4}\\.\\d+\\.\\d+$/"
    }
  ]
}
