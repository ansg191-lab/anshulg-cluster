[Unit]
Description=Renew Kanidm TLS certificate
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
ExecStartPre=/usr/bin/test -x /usr/local/sbin/kanidm-renew-cert.sh
ExecStart=/usr/local/sbin/kanidm-renew-cert.sh
Nice=19
IOSchedulingClass=idle
PrivateTmp=true
ProtectSystem=full
ProtectHome=true
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
